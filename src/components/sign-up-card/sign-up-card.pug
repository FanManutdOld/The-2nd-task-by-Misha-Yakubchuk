include ../text-fields/text-fields.pug
include ../radio-button/radio-button.pug
include ../toggle/toggle.pug
include ../submit-button/submit-button.pug
include ../button/button.pug

- const radio = [{label: "Мужчина", isChecked: true}, {label: "Женщина"}]

mixin sign-up-card()

  .sign-up-card
    .sign-up-card__content
      form(action="/mock-address", method="post")
        .sign-up-card__title Регистрация аккаунта
        .sign-up-card__name
          +text-field({placeholder: "Имя", isRequired: true})
        .sign-up-card__surname
          +text-field({placeholder: "Фамилия", isRequired: true})
        .sign-up-card__radio
          +radio-button({title: "Пол", radioButtons: radio})
        .sign-up-card__birthday
          +masked-text-field({title: "Дата рождения", placeholder: "ДД.ММ.ГГГГ", isRequired: true})
        .sign-up-card__email
          +text-field({title: "Данные для входа в сервис", placeholder: "Email", type: "email", isRequired: true})
        .sign-up-card__password
          +text-field({placeholder: "Пароль", type: "password", isRequired: true})
        .sign-up-card__toggle
          +toggle({label: "Получать спецпредложения"})
        .sign-up-card__submit
          +submit-button({text: "Перейти к оплате"})
        .sign-up-card__sign-in
          .sign-up-card__sign-in-text Уже есть аккаунт на Toxin 
          .sign-up-card__sign-in-button 
          +button({color: "white", place: "inForm", text: "Войти"})
