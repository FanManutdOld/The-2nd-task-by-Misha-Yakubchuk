extends ../../layout/layout.pug
include ../../../components/header/header.pug
include ../../../components/footer/footer.pug
include ../../../components/abouts-room/abouts-room.pug
include ../../../components/comment/comment.pug
include ../../../components/bullet-list/bullet-list.pug
include ../../../components/booking-room-card/booking-room-card.pug

block variables
  -
    const pageClass = 'room-details'

    const consts = require('./constants.json')

block title
  title Room details
  
block content
  section.room-details__images
    .room-details__left-image
      img(src=require("./img/room-details1.jpg").default, alt="Room image").room-details__image
    .room-details__right-images
      img(src=require("./img/room-details2.jpg").default, alt="Room image").room-details__image
      img(src=require("./img/room-details3.jpg").default, alt="Room image").room-details__image
  main.room-details__content
    .room-details__main-wrapper
      section.room-details__info
        .room-details__wrapper
          .room-details__room-info
            .room-details__text Сведения о номере
            .room-details__abouts-room
              +abouts-room({ roomDetails: consts.roomDetailsInSite })
          .room-details__room-impressions
            .room-details__text Впечатления от номера
            .room-details__wrapper.room-details__wrapper_with-margin
              .room-details__diagram
              ul.room-details__list
                li.room-details__element Великолепно
                li.room-details__element Хорошо
                li.room-details__element Удовлетворительно
                li.room-details__element Разочарован
        .room-details__wrapper
          .room-details__text Отзывы посетителей номера
          .room-details__num-of-comments 2 отзыва
        .room-details__comments
          .room-details__comment.js-room-details__comment
            +comment({ avatarImage: 'avatar1.jpg', userName: 'Мурад Сарафанов', dateText: '5 дней назад', likeButton: { count: 12, isLiked: true }, commentText: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.' })      
          .room-details__comment.js-room-details__comment
            +comment({ avatarImage: 'avatar2.jpg', userName: 'Патрисия Стёклышкова', dateText: 'Неделю назад', likeButton: { count: 2 }, commentText: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент' })      
        .room-details__wrapper
          .room-details__rules
            .room-details__text.room-details__text_with-margin Правила
            .room-details__bullet-list
              +bullet-list({ bulletList: consts.bulletList })
          .room-details__cancel
            .room-details__text Отмена
            .room-details__cancel-text Бесплатная отмена в течении 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      section.room-details__booking-room-card.js-room-details__booking-room-card
        +booking-room-card({ roomNumber: '888', costForDay: '9 990', isLux: true })